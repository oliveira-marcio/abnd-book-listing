<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Tema para o título do livro -->
    <style name="book_details_title" parent="book_detais">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Tema para o subtítulo do livro -->
    <style name="book_details_subtitle" parent="book_detais">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Tema para o demais detalhes do livro -->
    <style name="book_detais">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
